<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f3">

    <include layout="@layout/login_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/login_text_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入155****3232收到的短信验证码"
            android:textSize="15sp"
            android:textColor="#c7c6c6"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <EditText
                android:id="@+id/login_edit_codes"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:background="@drawable/login_bg_edittext"
                android:hint="请输入验证码"
                android:textColorHint="#979696"
                android:inputType="number"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#212121"/>
            <Button
                android:id="@+id/login_getcode_again_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="@drawable/login_next_step_btn_no"
                android:text="重新发送(120)"
                android:textColor="#9e9c9c"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:clickable="false"/>
        </LinearLayout>
        <Button
            android:id="@+id/login_getcodes_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_next_step_btn_no"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#9e9c9c"
            android:textSize="18dp"
            android:clickable="false"/>
    </LinearLayout>
</LinearLayout>