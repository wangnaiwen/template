<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f3">

    <include layout="@layout/login_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/login_edit_number"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:inputType="phone"
            android:hint="请输入手机号"
            android:textColorHint="#979696"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/login_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:button="@drawable/login_checkbox"
                android:text="    同意"
                android:textColor="#7c7b7b"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/login_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renting用户注册协议"
                android:textColor="#bf275a"
                android:layout_gravity="center_vertical"
                android:gravity="left" />
        </LinearLayout>
        <Button
            android:id="@+id/login_editnum_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_next_step_btn_no"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#9e9c9c"
            android:textSize="18dp"
            android:clickable="false"/>
    </LinearLayout>
</LinearLayout>